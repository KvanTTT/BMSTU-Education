			<toolkit:AccordionItem Header="Note Record" />
			<toolkit:AccordionItem Header="Midi Record" />
			<toolkit:AccordionItem Header="Keyboard" MaxWidth="Infinity" MaxHeight="300">
				<toolkit:AccordionItem.Content>
