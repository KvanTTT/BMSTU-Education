<UserControl x:Class="SilverClient.NumericUpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="31" d:DesignWidth="157" Margin="4">
    
    <Grid x:Name="LayoutRoot" Background="White">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="129*" />
			<ColumnDefinition Width="28" />
		</Grid.ColumnDefinitions>
		<Button Grid.Column="1" Margin="2" Padding="2">
			<Polygon Points="3,6 7.5,2 12,6 8.5,6 7.5,5 6.5,6" Fill="Black" StrokeLineJoin="Round" Stretch="Uniform" Margin="0" />
		</Button>
		<TextBox Grid.RowSpan="2" Name="textBox1" Margin="2" />
		<Button Grid.Column="1" Grid.Row="1" Margin="2" Padding="2">
			<Polygon Fill="Black" Margin="0" Points="3,2 7.5,6 12,2 8.5,2 7.5,3 6.5,2" Stretch="Uniform" StrokeLineJoin="Round" />
		</Button>
	</Grid>
</UserControl>
